<div class="eight wide center aligned column">
    <img src="/assets/ace.png" width="50px;height:auto;" />
    <h1 style="margin-bottom: 0">Edit Guest Entry</h1>
    <form class="ui form left aligned six column segment" action="/guests/edit/{{guest.id}}?_method=PUT" method="POST"
        name="form" id="form">
        <input type="hidden" name="_method" value="PUT">
        <div class="ui visible success message">
            <i class="close icon"></i>
            <div class="header">
                Your edit was successful.
            </div>
            <p>You guestbook details have been updated.</p>
        </div>
        <div class="ui visible negative message">
            <i class="close icon"></i>
            <div class="header">
                We're sorry we can't update your entry
            </div>
            <p>An error occured</p>
        </div>
        <div class="field">
            <label>Full Name</label>
            <input type="text" id="fullname" name="name" placeholder="{{guest.name}}" value="{{guest.name}}">
        </div>
        <div class="field">
            <label>Email</label>
            <input type="email" id="email" name="email" placeholder="{{guest.email}}" value="{{guest.email}}">
        </div>
        <div class="field">
            <label>Comment</label>
            <textarea name="comment" id="comment">{{guest.comment}}</textarea>
        </div>
        <div class="field">
            <div class="ui checkbox">
                <input type="checkbox" name="agree" checked id="agree" tabindex="0" class="hidden">
                <label for="agree">I agree to the Terms and Conditions</label>
            </div>
        </div>
        <button class="ui submit button" type="submit">Submit</button>
    </form>
</div>
</div>
</div>
</body>
<script type="text/javascript">
    $('.ui.checkbox')
        .checkbox()
        ;
    $('.message .close')
        .on('click', function () {
            $(this)
                .closest('.message')
                .transition('fade')
                ;
        })
        ;
    $('.ui.form')
        .form({
            fields: {
                fullname: 'empty',
                email: 'email',
                comment: 'empty',
                terms: 'checked'
            }
        })
        ;
</script>

</html>